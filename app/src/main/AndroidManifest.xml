<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.technion.quickthumbs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TextsActivity"
            android:label="@string/Texts"
            android:parentActivityName=".ProfileActivity"/>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/Friends"
            android:parentActivityName=".ProfileActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/Profile"
            android:parentActivityName=".MainUserActivity" />
        <activity android:name=".MainUserActivity" />
        <activity android:name=".CreateAccountActivity"
                  android:parentActivityName=".MainActivity"  />
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".settings.UserSettingActivity"></activity>
        <activity android:name=".theme.ThemeSelectorActivity"
                  android:parentActivityName=".MainUserActivity"
                  />
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".AddTextActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
            android:parentActivityName=".MainUserActivity"/>
        <activity
            android:name=".GameActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize"
            android:parentActivityName=".MainUserActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>